<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkbox Test</title>
</head>
<body>
    <h1>Checkbox Test Page</h1>
    <label>
        <input type="checkbox" id="testCheckbox">
        Check me
    </label>
    <script>
        // JavaScript to mimic your Datadog test logic
        const checkbox = document.querySelector("#testCheckbox");
        if (checkbox) {
            if (!checkbox.checked) {
                checkbox.click(); // Click to check the checkbox
                console.log('Checkbox was not checked, now checked');
                console.log('Checkbox checked:', checkbox.checked === true); // Verify it's now checked
            } else {
                console.log('Checkbox is already checked');
            }
        } else {
            console.error('Checkbox not found');
        }
    </script>
</body>
</html>
